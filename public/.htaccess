<IfModule mod_rewrite.c>
    RewriteEngine On

    # Evitar que Apache interprete rutas como archivos/carpetas (com√∫n en cPanel)
    Options -MultiViews

    # Enviar todas las peticiones que no sean archivo/carpeta real a Laravel
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>